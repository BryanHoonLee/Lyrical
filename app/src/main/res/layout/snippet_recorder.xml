<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/colorBlack"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ToggleButton android:layout_width="70dp"
                  android:layout_height="70dp"
                  android:id="@+id/button_record"
                  android:background="@drawable/toggle_button_record_background"
                  android:theme="@style/CardView.Dark"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginStart="8dp"  android:layout_marginEnd="8dp"
                  android:textOff=" " android:textOn=" "/>

    <ImageButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/button_save_recording"
                 android:src="@drawable/ic_stop_black_24dp"
                 android:background="@drawable/background_circle"
                 android:visibility="invisible"
                 app:layout_constraintTop_toTopOf="@+id/button_record" android:layout_marginBottom="8dp"
                 app:layout_constraintBottom_toBottomOf="@+id/button_record" app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toEndOf="@+id/button_record"
    />


</androidx.constraintlayout.widget.ConstraintLayout>